<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/createView">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/inputPanel">

        <EditText
            android:id="@+id/editTextBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand (eg. Goodyear)"
            android:nextFocusUp="@id/editTextBrand"
            android:nextFocusLeft="@id/editTextBrand"/>

        <EditText
            android:id="@+id/editTextModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model (eg. Duraplus)"/>


        <EditText
            android:id="@+id/editTextSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Size (eg. 175-70-13)"/>

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price (eg. 120)"/>

        <EditText
            android:id="@+id/editTextQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity (eg. 16)"/>

        <EditText
            android:id="@+id/editTextManufactureDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Manufacture Date (eg. 0516)"/>

        <EditText
            android:id="@+id/editTextSellingPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Retail Price (eg. 260)"/>

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"/>
        <include layout="@layout/tyre_size_radiobutton"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/buttonSave"
            android:text="Create"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressSaveBar"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:visibility="gone"
                android:layout_alignRight="@+id/buttonSave"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonDisplay"
                android:text="Display"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressDisplayBar"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:visibility="gone"
                android:layout_alignRight="@+id/buttonDisplay"/>
        </RelativeLayout>

