        android:button="@android:color/transparent"
        android:drawablePadding="0dp"
        android:drawableTop="@drawable/custom_radiobutton"
        android:gravity="center"
        android:text="14"
        android:paddingLeft="8dp"/>
    <RadioButton
        android:id="@+id/radio_15"
