        android:gravity="center"
        android:text="13"
        android:paddingLeft="8dp"/>
    <RadioButton
        android:id="@+id/radio_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRadioButtonClicked"
